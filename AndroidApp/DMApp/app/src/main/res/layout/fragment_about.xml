<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_normal"
            android:fontFamily="@font/nunito_light"
            android:padding="@dimen/padding_extra_large"
            android:text="@string/team"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/montserrat_bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_large">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_normal">

                <RelativeLayout
                    android:id="@+id/person_rl_image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/person_civ_profile_image"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:src="@drawable/vaibhav"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width="0.1dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:fontFamily="@font/lato"
                    android:paddingStart="@dimen/padding_normal"
                    android:paddingLeft="@dimen/padding_normal"
                    android:paddingTop="@dimen/padding_normal"
                    android:text="Vaibhav G"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@id/person_rl_image1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:fontFamily="@font/lato"
                    android:paddingStart="@dimen/padding_normal"
                    android:paddingLeft="@dimen/padding_normal"
                    android:paddingTop="@dimen/padding_normal"
                    android:text="gvaibhav1734@gmail.com"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    app:layout_constraintLeft_toRightOf="@id/person_rl_image1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/name1" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_large">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_normal">

                <RelativeLayout
                    android:id="@+id/person_rl_image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:src="@drawable/akash_nair"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width="0.1dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:fontFamily="@font/lato"
                    android:paddingStart="@dimen/padding_normal"
                    android:paddingLeft="@dimen/padding_normal"
                    android:paddingTop="@dimen/padding_normal"
                    android:text="Akash Nair"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@id/person_rl_image2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:fontFamily="@font/lato"
                    android:paddingStart="@dimen/padding_normal"
                    android:paddingLeft="@dimen/padding_normal"
                    android:paddingTop="@dimen/padding_normal"
                    android:text="akash30121998@gmail.com"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    app:layout_constraintLeft_toRightOf="@id/person_rl_image2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/name2" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_extra_large">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_normal">

                <RelativeLayout
                    android:id="@+id/person_rl_image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:src="@drawable/saurabh"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width="0.1dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/name3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:fontFamily="@font/lato"
                    android:paddingStart="@dimen/padding_normal"
                    android:paddingLeft="@dimen/padding_normal"
                    android:paddingTop="@dimen/padding_normal"
                    android:text="Saurabh Agarwala"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@id/person_rl_image3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:fontFamily="@font/lato"
                    android:paddingStart="@dimen/padding_normal"
                    android:paddingLeft="@dimen/padding_normal"
                    android:paddingTop="@dimen/padding_normal"
                    android:text="saur.agarwala@gmail.com"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    app:layout_constraintLeft_toRightOf="@id/person_rl_image3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/name3" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_extra_large">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_normal">

                <TextView
                    android:id="@+id/about_sos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:fontFamily="@font/lato"
                    android:paddingStart="@dimen/padding_normal"
                    android:paddingLeft="@dimen/padding_normal"
                    android:paddingTop="@dimen/padding_normal"
                    android:text="Change SOS Number"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>